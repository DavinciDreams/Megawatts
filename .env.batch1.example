# Batch 1: Core Security and Connection Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Security Sandbox Configuration
# ============================================

# Maximum execution time for sandboxed code (in milliseconds)
# Default: 30000 (30 seconds)
SANDBOX_MAX_EXECUTION_TIME=30000

# Maximum memory limit for sandbox (in MB)
# Default: 512
SANDBOX_MAX_MEMORY_MB=512

# Maximum CPU percentage for sandbox (0-100)
# Default: 80
SANDBOX_MAX_CPU_PERCENT=80

# Comma-separated list of allowed external modules for sandbox
# Default: (empty - no external modules allowed)
SANDBOX_ALLOWED_MODULES=

# Allow network access in sandbox (true/false)
# Default: false
SANDBOX_NETWORK_ACCESS=false

# Allow file system access in sandbox (true/false)
# Default: false
SANDBOX_FILE_SYSTEM_ACCESS=false

# ============================================
# Discord Connection Configuration
# ============================================

# Discord bot token
# Required for Discord.js client connection
DISCORD_TOKEN=your_discord_bot_token_here

# Discord gateway intents (comma-separated)
# Options: Guilds, GuildMembers, GuildBans, GuildEmojis, GuildIntegrations, 
#          GuildWebhooks, GuildInvites, GuildVoiceStates, GuildPresences, 
#          GuildMessages, GuildMessageReactions, GuildMessageTyping, 
#          DirectMessages, DirectMessageReactions, DirectMessageTyping, 
#          MessageContent, GuildScheduledEvents, GuildScheduledEvents, AutoModerationConfiguration,
#          AutoModerationExecution, GuildModeration, GuildAuditLogEntry, GuildAuditLog,
#          GuildWebhooks, GuildInvites, GuildVoiceStates, GuildPresences,
#          GuildMembers, GuildMessageReactions, GuildBans, GuildEmojisAndStickers,
#          GuildStickers, GuildIntegrations, GuildWebhooks, VoiceStates,
#          PresenceUpdates, DirectMessages, DirectMessageReactions, MessageContent,
#          GuildScheduledEvents, AutoModerationConfiguration, AutoModerationExecution,
#          GuildModeration, GuildAuditLogEntry, GuildAuditLog, GuildWebhooks
DISCORD_INTENTS=Guilds,GuildMembers,GuildMessages,GuildMessageReactions

# Number of shards to use
# Options: 'auto', or specific number
# Default: auto
DISCORD_SHARDS=auto

# Connection timeout in milliseconds
# Default: 30000 (30 seconds)
DISCORD_CONNECTION_TIMEOUT=30000

# ============================================
# Security Auditor Configuration
# ============================================

# Penetration test provider
# Options: 'local' (npm audit), 'snyk', 'burp', 'owasp-zap'
# Default: local
PENETRATION_TEST_PROVIDER=local

# Snyk API key (if using Snyk for penetration testing)
# Required if PENETRATION_TEST_PROVIDER=snyk
SNYK_API_KEY=

# ============================================
# Metrics Configuration
# ============================================

# Metrics provider
# Options: 'prometheus', 'cloudwatch', 'datadog'
# Default: prometheus
METRICS_PROVIDER=prometheus

# Metrics endpoint URL (for external providers)
# Required if METRICS_PROVIDER is not prometheus
METRICS_ENDPOINT=

# ============================================
# Email Notification Configuration
# ============================================

# Enable email notifications (true/false)
# Default: false
EMAIL_NOTIFICATIONS_ENABLED=false

# SMTP host
EMAIL_SMTP_HOST=smtp.gmail.com

# SMTP port
EMAIL_SMTP_PORT=587

# Use SSL/TLS for SMTP (true/false)
EMAIL_SMTP_SECURE=false

# SMTP authentication username
EMAIL_SMTP_AUTH_USER=your_email@gmail.com

# SMTP authentication password
EMAIL_SMTP_AUTH_PASS=your_app_password

# Email from address
EMAIL_FROM=alerts@yourdomain.com

# Email to addresses (comma-separated)
EMAIL_TO=team@yourdomain.com,admin@yourdomain.com

# ============================================
# Slack Notification Configuration
# ============================================

# Enable Slack notifications (true/false)
# Default: false
SLACK_NOTIFICATIONS_ENABLED=false

# Slack webhook URL
# Format: https://hooks.slack.com/services/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Slack channel to post to
# Default: #alerts
SLACK_CHANNEL=#alerts

# Slack bot username
# Default: Alert Manager
SLACK_USERNAME=Alert Manager

# Slack icon emoji
# Default: :warning:
SLACK_ICON_EMOJI=:warning:

# ============================================
# Discord Notification Configuration
# ============================================

# Enable Discord notifications (true/false)
# Default: false
DISCORD_NOTIFICATIONS_ENABLED=false

# Discord webhook URL
# Format: https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Discord channel ID to mention
# Optional: specify channel ID for notifications
DISCORD_CHANNEL_ID=

# Discord role ID to mention
# Optional: specify role ID for @mentions
DISCORD_ROLE_ID=

# ============================================
# PagerDuty Notification Configuration
# ============================================

# Enable PagerDuty notifications (true/false)
# Default: false
PAGERDUTY_NOTIFICATIONS_ENABLED=false

# PagerDuty integration key
# Format: your_integration_key_here
PAGERDUTY_INTEGRATION_KEY=your_integration_key_here

# PagerDuty service key (optional)
# Format: your_service_key_here
PAGERDUTY_SERVICE_KEY=

# ============================================
# Webhook Notification Configuration
# ============================================

# Webhook URLs (JSON array format)
# Format: [{"url":"https://example.com/webhook","headers":{"Authorization":"Bearer token"}}]
WEBHOOK_CONFIGS=[{"url":"https://example.com/webhook","headers":{"Authorization":"Bearer token"}}]

# ============================================
# NPM Registry Configuration
# ============================================

# NPM registry URL
# Default: https://registry.npmjs.org
NPM_REGISTRY_URL=https://registry.npmjs.org
