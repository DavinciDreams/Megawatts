# Discord Configuration
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_here
DISCORD_COMMAND_PREFIX=!

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL Database Configuration (standardized naming)
# These variables use POSTGRES_* prefix for consistency across the codebase
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=botuser
POSTGRES_PASSWORD=your_password_here
POSTGRES_DATABASE=megawatts

# ============================================================================
# Redis Configuration
# ============================================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ============================================================================
# AI Provider Configuration
# ============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Llama API Configuration
LLAMA_API_ENDPOINT=your_llama_api_endpoint_here

# ============================================================================
# Vector Database Configuration
# ============================================================================

# Vector database type (qdrant, pinecone, weaviate, chroma, milvus)
# Determines which vector database provider to use for embeddings storage
VECTOR_DB_TYPE=qdrant

# Vector database endpoint
# Connection URL for the selected vector database provider
VECTOR_DB_ENDPOINT=your_vector_db_endpoint_here

# Vector database API key
# Authentication key for accessing the vector database
VECTOR_DB_API_KEY=your_vector_db_api_key_here

# ============================================================================
# Storage Configuration
# ============================================================================

# S3/MinIO Object Storage Configuration
S3_ENDPOINT=your_s3_or_minio_endpoint_here
S3_ACCESS_KEY=your_access_key_here
S3_SECRET_KEY=your_secret_key_here
S3_BUCKET=your_bucket_name_here
S3_REGION=your_region_here
S3_USE_SSL=true

# ============================================================================
# Self-Editing Configuration
# ============================================================================

# Enable self-editing capabilities (true/false)
# When enabled, the bot can modify its own code based on analysis and validation
ENABLE_SELF_EDITING=true

# Validation stages for self-editing (comma-separated)
# Defines the pipeline stages for validating code modifications
# Options: static, dynamic, runtime, approval
VALIDATION_STAGES=static,dynamic,runtime,approval

# Enable code security checks (true/false)
# When enabled, performs security analysis on code modifications
CODE_SECURITY_CHECKS=true

# ============================================================================
# Safety & Security Configuration
# ============================================================================

# Enable content moderation (true/false)
# When enabled, filters harmful or inappropriate content from bot responses
CONTENT_MODERATION=true

# Enable rate limiting (true/false)
# When enabled, applies rate limiting to prevent abuse
RATE_LIMIT_ENABLED=true

# Enable audit logging (true/false)
# When enabled, logs all bot actions for security and compliance
AUDIT_LOGGING=true

# ============================================================================
# Conversational Discord Configuration
# ============================================================================

# Enable conversational Discord mode (true/false)
# When enabled, the bot will engage in AI-powered conversations with users
DISCORD_CONVERSATIONAL_ENABLED=false

# Bot operation mode (conversational/command/hybrid)
# - conversational: Full conversational mode with AI responses
# - command: Command-only mode, responds to Discord slash commands
# - hybrid: Mix of conversational and command modes
DISCORD_CONVERSATIONAL_MODE=conversational

# Response channel configuration
# Channel name or ID where bot responses will be sent
DISCORD_CONVERSATIONAL_RESPONSE_CHANNEL=bot-responses

# Response channel type (same/dm/custom)
# - same: Respond in the same channel as the user message
# - dm: Send responses via direct message
# - custom: Send to a custom channel specified above
DISCORD_CONVERSATIONAL_RESPONSE_CHANNEL_TYPE=same

# Context window size (1-100)
# Number of messages to keep in conversation history for context
DISCORD_CONVERSATIONAL_CONTEXT_WINDOW=50

# Maximum tokens for AI responses (100-10000)
# Controls the maximum length of AI-generated responses
DISCORD_CONVERSATIONAL_MAX_TOKENS=2000

# AI temperature (0.0-2.0)
# Controls randomness in AI responses (lower = more deterministic, higher = more creative)
DISCORD_CONVERSATIONAL_TEMPERATURE=0.7

# Bot personality tone (friendly/professional/casual/playful)
# Default tone for bot responses
DISCORD_CONVERSATIONAL_TONE=friendly

# Response formality (formal/casual/adaptive)
# Level of formality in bot responses
DISCORD_CONVERSATIONAL_FORMALITY=casual

# Response verbosity (concise/normal/detailed/adaptive)
# Level of detail in bot responses
DISCORD_CONVERSATIONAL_VERBOSITY=balanced

# Enable emotional intelligence features (true/false)
# Enables sentiment analysis, emotion detection, and empathetic responses
DISCORD_CONVERSATIONAL_EMOTIONAL_INTELLIGENCE=true

# Emotion influence on responses (0.0-1.0)
# How much detected emotions should influence response adaptation
DISCORD_CONVERSATIONAL_EMOTION_INFLUENCE=0.7

# Sentiment threshold for emotion detection (0.0-1.0)
# Threshold for determining positive/negative sentiment in user messages
# Range: 0.0 (very negative) to 1.0 (very positive), default: 0.5
SENTIMENT_THRESHOLD=0.5

# Memory retention period (1-365 days)
# How long to retain conversation history in medium-term storage
DISCORD_CONVERSATIONAL_MEMORY_RETENTION_DAYS=30

# Enable multilingual support (true/false)
# Enables automatic language detection and multi-language support
DISCORD_CONVERSATIONAL_MULTILINGUAL_ENABLED=false

# Default language (ISO 639-1 code, e.g., en, es, fr, de)
# Primary language for bot responses
DISCORD_CONVERSATIONAL_DEFAULT_LANGUAGE=en

# Enable content filtering (true/false)
# Filters harmful or inappropriate content from bot responses
DISCORD_CONVERSATIONAL_CONTENT_FILTERING=true

# Moderation level (strict/moderate/relaxed)
# Strictness of content moderation
DISCORD_CONVERSATIONAL_MODERATION_LEVEL=moderate

# Enable emergency stop functionality (true/false)
# Allows users to trigger emergency stop with specific phrases
DISCORD_CONVERSATIONAL_EMERGENCY_STOP_ENABLED=true

# Emergency stop phrases (comma-separated list)
# Phrases that trigger emergency stop (e.g., stop,emergency stop,halt,abort)
DISCORD_CONVERSATIONAL_EMERGENCY_STOP_PHRASES=stop,emergency stop,halt,abort

# Maximum response length (100-10000)
# Maximum character limit for bot responses
DISCORD_CONVERSATIONAL_MAX_RESPONSE_LENGTH=2000

# ============================================================================
# AI SDK Configuration
# ============================================================================

# Enable AI SDK for hybrid AI integration (true/false)
# When enabled, uses Vercel AI SDK for tool validation and provider management
# Default: false (for backward compatibility)
USE_AI_SDK=false

# Use AI SDK for parameter validation (true/false)
# When enabled, uses Zod schemas from AI SDK for validating tool parameters
# Default: false (uses legacy validation)
USE_AI_SDK_FOR_VALIDATION=false

# Use AI SDK for tool execution (true/false)
# When enabled, uses AI SDK's tool execution engine
# WARNING: Start with false for safety during gradual rollout
# Default: false (uses legacy execution)
USE_AI_SDK_FOR_EXECUTION=false

# Use AI SDK for provider creation (true/false)
# When enabled, uses AI SDK's provider factory for creating AI provider instances
# Default: false (uses legacy provider creation)
USE_AI_SDK_FOR_PROVIDERS=false

# Use AI SDK for streaming responses (true/false)
# When enabled, enables streaming support via AI SDK
# Default: false
USE_AI_SDK_FOR_STREAMING=false

# ============================================================================
# Bot Configuration
# ============================================================================

# Default response channel for bot messages
BOT_RESPONSE_CHANNEL=megawatts

# ============================================================================
# Environment Configuration
# ============================================================================

# Node environment (development/production/staging)
NODE_ENV=development
