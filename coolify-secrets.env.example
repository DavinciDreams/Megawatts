# =============================================================================
# Discord Bot Coolify Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Do not commit the actual .env file to version control
# =============================================================================

# =============================================================================
# General Configuration
# =============================================================================
NODE_ENV=staging
LOG_LEVEL=info
DOMAIN=your-domain.com

# =============================================================================
# Discord Bot Configuration
# =============================================================================
# Discord Bot Token (REQUIRED)
DISCORD_TOKEN=your_discord_bot_token_here

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
# PostgreSQL Database Name
DB_NAME=discord_bot

# PostgreSQL Username
DB_USER=discord_bot_user

# PostgreSQL Password (use a strong password)
DB_PASSWORD=your_secure_postgres_password

# PostgreSQL Port (external)
POSTGRES_PORT=5432

# PostgreSQL Configuration
POSTGRES_REPLICAS=1
POSTGRES_CPU_LIMIT=0.5
POSTGRES_MEMORY_LIMIT=256M
POSTGRES_DATA_PATH=./data/postgres

# =============================================================================
# Redis Configuration
# =============================================================================
# Redis Password (use a strong password)
REDIS_PASSWORD=your_secure_redis_password

# Redis Database Number
REDIS_DB=0

# Redis Port (external)
REDIS_PORT=6379

# Redis Configuration
REDIS_CPU_LIMIT=0.25
REDIS_MEMORY_LIMIT=128M
REDIS_DATA_PATH=./data/redis

# =============================================================================
# AI Service Configuration
# =============================================================================
# OpenAI API Key (required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional alternative to OpenAI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# S3 Storage Configuration
# =============================================================================
# S3 Bucket Name
S3_BUCKET=your_s3_bucket_name

# S3 Region
S3_REGION=us-east-1

# S3 Access Key ID
S3_ACCESS_KEY_ID=your_s3_access_key_id

# S3 Secret Access Key
S3_SECRET_ACCESS_KEY=your_s3_secret_access_key

# =============================================================================
# Application Configuration
# =============================================================================
# Application Port (external)
APP_PORT=8080

# Application Replicas
APP_REPLICAS=2

# Application Resource Limits
APP_CPU_LIMIT=0.75
APP_MEMORY_LIMIT=384M

# =============================================================================
# Monitoring Configuration (Prometheus)
# =============================================================================
# Prometheus Port (external)
PROMETHEUS_PORT=9090

# Prometheus Data Retention
PROMETHEUS_RETENTION=72h

# Prometheus Configuration
PROMETHEUS_CPU_LIMIT=0.25
PROMETHEUS_MEMORY_LIMIT=256M
PROMETHEUS_DATA_PATH=./data/prometheus

# =============================================================================
# Monitoring Configuration (Grafana)
# =============================================================================
# Grafana Port (external)
GRAFANA_PORT=3000

# Grafana Admin Password (use a strong password)
GRAFANA_PASSWORD=your_secure_grafana_password

# Grafana Domain
GRAFANA_DOMAIN=grafana.your-domain.com

# Grafana Plugins (comma-separated list)
GRAFANA_PLUGINS=

# Grafana Configuration
GRAFANA_CPU_LIMIT=0.25
GRAFANA_MEMORY_LIMIT=256M
GRAFANA_DATA_PATH=./data/grafana

# =============================================================================
# Nginx Configuration
# =============================================================================
# Nginx HTTP Port
NGINX_HTTP_PORT=80

# Nginx HTTPS Port
NGINX_HTTPS_PORT=443

# Nginx Configuration
NGINX_CPU_LIMIT=0.25
NGINX_MEMORY_LIMIT=128M

# =============================================================================
# Traefik Configuration (Optional)
# =============================================================================
# Traefik HTTP Port
TRAEFIK_HTTP_PORT=8081

# Traefik HTTPS Port
TRAEFIK_HTTPS_PORT=8443

# Traefik Dashboard Port
TRAEFIK_DASHBOARD_PORT=8082

# Traefik Configuration
TRAEFIK_CPU_LIMIT=0.25
TRAEFIK_MEMORY_LIMIT=128M

# =============================================================================
# Network Configuration
# =============================================================================
# Network Subnet
NETWORK_SUBNET=172.22.0.0/16

# =============================================================================
# Production Overrides (Uncomment and modify for production)
# =============================================================================
# NODE_ENV=production
# LOG_LEVEL=info
# APP_REPLICAS=3
# APP_CPU_LIMIT=1.0
# APP_MEMORY_LIMIT=512M
# POSTGRES_REPLICAS=2
# PROMETHEUS_RETENTION=200h

# =============================================================================
# Staging Overrides (Uncomment and modify for staging)
# =============================================================================
# NODE_ENV=staging
# LOG_LEVEL=debug
# APP_REPLICAS=2
# APP_CPU_LIMIT=0.75
# APP_MEMORY_LIMIT=384M
# POSTGRES_REPLICAS=1
# PROMETHEUS_RETENTION=72h
# POSTGRES_PORT=5433
# REDIS_PORT=6380
# PROMETHEUS_PORT=9091
# GRAFANA_PORT=3001

# =============================================================================
# Security Notes
# =============================================================================
# 1. Use strong, unique passwords for all services
# 2. Store sensitive values in Coolify's secret manager when possible
# 3. Rotate API keys and passwords regularly
# 4. Limit database access to specific IP addresses in production
# 5. Use SSL/TLS for all external communications
# 6. Enable firewall rules to restrict access to monitoring services
# 7. Regularly update all services to their latest secure versions
# 8. Monitor for unauthorized access attempts
# =============================================================================