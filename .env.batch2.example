# Batch 2: Compliance and Monitoring Configuration
# Copy this file to .env and update values for your environment

# ============================================================================
# COMPLIANCE SETTINGS
# ============================================================================

# Rate Limiting Compliance
COMPLIANCE_RATE_LIMIT_ENABLED=true
COMPLIANCE_RATE_LIMIT_MAX_REQUESTS_PER_MINUTE=50
COMPLIANCE_RATE_LIMIT_BURST_ALLOWANCE=10
COMPLIANCE_RATE_LIMIT_WINDOW_SECONDS=60

# Content Policy Compliance
COMPLIANCE_CONTENT_POLICY_ENABLED=true
COMPLIANCE_CONTENT_POLICY_PROFANITY_FILTER=true
COMPLIANCE_CONTENT_POLICY_SPAM_DETECTION=true
COMPLIANCE_CONTENT_POLICY_HATE_SPEECH_DETECTION=true
COMPLIANCE_CONTENT_POLICY_NSFW_FILTER=true
COMPLIANCE_CONTENT_POLICY_MAX_MESSAGE_LENGTH=4000

# User Privacy Compliance
COMPLIANCE_USER_PRIVACY_ENABLED=true
COMPLIANCE_USER_PRIVACY_DATA_RETENTION_DAYS=90
COMPLIANCE_USER_PRIVACY_ANONYMIZATION_ALLOWED=true
COMPLIANCE_USER_PRIVACY_CONSENT_REQUIRED=true
COMPLIANCE_USER_PRIVACY_RIGHT_TO_BE_FORGOTTEN=true

# Bot Behavior Compliance
COMPLIANCE_BOT_BEHAVIOR_ENABLED=true
COMPLIANCE_BOT_BEHAVIOR_RATE_LIMIT_COMPLIANT=true
COMPLIANCE_BOT_BEHAVIOR_COMMAND_PREFIX_REQUIRED=true
COMPLIANCE_BOT_BEHAVIOR_DM_SPAM_PROTECTION=true
COMPLIANCE_BOT_BEHAVIOR_MENTION_SPAM_PROTECTION=true
COMPLIANCE_BOT_BEHAVIOR_INVITE_RATE_LIMIT=5

# Accessibility Compliance
COMPLIANCE_ACCESSIBILITY_ENABLED=true
COMPLIANCE_ACCESSIBILITY_WCAG_LEVEL=AA
COMPLIANCE_ACCESSIBILITY_COLOR_CONTRAST_AA=4.5
COMPLIANCE_ACCESSIBILITY_COLOR_CONTRAST_AAA=7.0
COMPLIANCE_ACCESSIBILITY_ALT_TEXT_REQUIRED=true
COMPLIANCE_ACCESSIBILITY_KEYBOARD_NAVIGATION_REQUIRED=true
COMPLIANCE_ACCESSIBILITY_SCREEN_READER_COMPATIBLE=true

# Localization Compliance
COMPLIANCE_LOCALIZATION_ENABLED=true
COMPLIANCE_LOCALIZATION_MIN_TRANSLATION_COVERAGE=0.95
COMPLIANCE_LOCALIZATION_SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh
COMPLIANCE_LOCALIZATION_CULTURAL_SENSITIVITY_CHECK=true

# ============================================================================
# SECURITY TEAM SETTINGS
# ============================================================================

# Security Team Directory
SECURITY_TEAM_ENABLED=true
SECURITY_TEAM_ON_CALL_ROTATION_HOURS=24
SECURITY_TEAM_DEFAULT_ROLE=member
SECURITY_TEAM_CONTACT_METHOD=email
SECURITY_TEAM_NOTIFICATION_CHANNELS=security-alerts,admin-notifications

# Security Team Members (comma-separated list of user IDs)
# Format: USER_ID:NAME:ROLE:PRIORITY
# Example: 123456789012345678:John Doe:security-lead:1
SECURITY_TEAM_MEMBERS=

# ============================================================================
# PERFORMANCE TRACKING SETTINGS
# ============================================================================

# Performance Metrics Collection
PERFORMANCE_TRACKING_ENABLED=true
PERFORMANCE_TRACKING_METRICS_COLLECTION_INTERVAL=300000
PERFORMANCE_TRACKING_METRICS_RETENTION_DAYS=90
PERFORMANCE_TRACKING_AUTO_TRACK_MAINTENANCE=true

# Performance Thresholds
PERFORMANCE_THRESHOLD_LATENCY_MS=1000
PERFORMANCE_THRESHOLD_MEMORY_USAGE_PERCENT=80
PERFORMANCE_THRESHOLD_CPU_USAGE_PERCENT=80
PERFORMANCE_THRESHOLD_ERROR_RATE_PERCENT=5
PERFORMANCE_THRESHOLD_IMPROVEMENT_PERCENT=10

# ============================================================================
# MARKETPLACE SETTINGS
# ============================================================================

# NPM Registry Configuration
MARKETPLACE_NPM_REGISTRY_URL=https://registry.npmjs.org
MARKETPLACE_NPM_SCOPE=@megawatts
MARKETPLACE_CACHE_ENABLED=true
MARKETPLACE_CACHE_TTL_MINUTES=5

# Marketplace API Settings
MARKETPLACE_API_ENABLED=true
MARKETPLACE_API_TIMEOUT_MS=5000
MARKETPLACE_API_MAX_RETRIES=3

# Marketplace Categories
MARKETPLACE_CATEGORIES=ai-integration,automation,bot-commands,communication,data-processing,developer-tools,games,logging,moderation,music,productivity,security,testing,utility,voice

# ============================================================================
# HEALTH MONITORING SETTINGS
# ============================================================================

# Health Check Configuration
HEALTH_MONITOR_ENABLED=true
HEALTH_MONITOR_INTERVAL_MS=5000
HEALTH_MONITOR_TIMEOUT_MS=3000
HEALTH_MONITOR_RETRIES=3

# Health Check Thresholds
HEALTH_THRESHOLD_ERROR_RATE=0.05
HEALTH_THRESHOLD_LATENCY_MS=1000
HEALTH_THRESHOLD_MEMORY_USAGE=0.8
HEALTH_THRESHOLD_CPU_USAGE=0.8

# ============================================================================
# DATABASE SETTINGS
# ============================================================================

# Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=megawatts
DB_USER=megawatts_user
DB_PASSWORD=your_password_here
DB_SSL=false

# Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT_MS=30000

# ============================================================================
# LOGGING SETTINGS
# ============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log Format (json, text)
LOG_FORMAT=json

# Log File Paths
LOG_FILE_PATH=./logs
LOG_ERROR_FILE=./logs/error.log
LOG_ACCESS_FILE=./logs/access.log

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# API Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS_PER_MINUTE=60
API_RATE_LIMIT_WINDOW_SECONDS=60

# Session Settings
SESSION_SECRET=your_session_secret_here_change_in_production
SESSION_MAX_AGE_HOURS=24

# CORS Settings
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# ============================================================================
# MAINTENANCE SETTINGS
# ============================================================================

# Maintenance Mode
MAINTENANCE_MODE=false

# Maintenance Window (format: YYYY-MM-DD HH:MM-YYYY-MM-DD HH:MM)
MAINTENANCE_WINDOW_START=
MAINTENANCE_WINDOW_END=

# Maintenance Notification Channels
MAINTENANCE_NOTIFICATION_CHANNELS=admin-notifications,status-updates

# ============================================================================
# ENVIRONMENT
# ============================================================================

NODE_ENV=development
ENVIRONMENT=development

# Server Settings
SERVER_PORT=3000
SERVER_HOST=0.0.0.0

# Application Settings
APP_NAME=Megawatts
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
